<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/main_layout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        >

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:id="@+id/back"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirm"
            android:id="@+id/confirm"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/back"
            android:layout_alignParentTop="true"
            android:id="@+id/padding_layout">

        <!-- row0 -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/row0"
            android:layout_weight="0.25">
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/row0_cell0"
                android:src="@drawable/contour"
                android:adjustViewBounds="true"
                android:layout_weight="0.25">

            </ImageView>
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/row0_cell1"
                android:src="@drawable/contour"
                android:adjustViewBounds="true"
                android:layout_weight="0.25">

            </ImageView>
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/row0_cell2"
                android:src="@drawable/contour"
                android:adjustViewBounds="true"
                android:layout_weight="0.25">

            </ImageView>
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/row0_cell3"
                android:src="@drawable/contour"
                android:adjustViewBounds="true"
                android:layout_weight="0.25">

            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/row1"
            android:layout_weight="0.25">
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/row1_cell0"
                android:src="@drawable/contour"
                android:adjustViewBounds="true"
                android:layout_weight="0.25">

            </ImageView>
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/row1_cell1"
                android:src="@drawable/contour"
                android:adjustViewBounds="true"
                android:layout_weight="0.25">

            </ImageView>
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/row1_cell2"
                android:src="@drawable/contour"
                android:adjustViewBounds="true"
                android:layout_weight="0.25">

            </ImageView>
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/row1_cell3"
                android:src="@drawable/contour"
                android:adjustViewBounds="true"
                android:layout_weight="0.25">

            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/row2"
            android:layout_weight="0.25">
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/row2_cell0"
                android:src="@drawable/contour"
                android:adjustViewBounds="true"
                android:layout_weight="0.25">

            </ImageView>
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/row2_cell1"
                android:src="@drawable/contour"
                android:adjustViewBounds="true"
                android:layout_weight="0.25">

            </ImageView>
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/row2_cell2"
                android:src="@drawable/contour"
                android:adjustViewBounds="true"
                android:layout_weight="0.25">

            </ImageView>
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/row2_cell3"
                android:src="@drawable/contour"
                android:adjustViewBounds="true"
                android:layout_weight="0.25">

            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/row3"
            android:layout_weight="0.25">
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/row3_cell0"
                android:src="@drawable/contour"
                android:adjustViewBounds="true"
                android:layout_weight="0.25">

            </ImageView>
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/row3_cell1"
                android:src="@drawable/contour"
                android:adjustViewBounds="true"
                android:layout_weight="0.25">

            </ImageView>
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/row3_cell2"
                android:src="@drawable/contour"
                android:adjustViewBounds="true"
                android:layout_weight="0.25">

            </ImageView>
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/row3_cell3"
                android:src="@drawable/contour"
                android:adjustViewBounds="true"
                android:layout_weight="0.25">

            </ImageView>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>